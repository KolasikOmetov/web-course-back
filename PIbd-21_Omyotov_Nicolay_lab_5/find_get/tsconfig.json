{
   "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "esModuleInterop": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "noImplicitAny": false
   },
   "exclude": [
      "node_modules",
      "dist"
   ],
   "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ]
}