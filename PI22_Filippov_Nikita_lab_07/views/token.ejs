<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Работа с файлами</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="./auth.css" />
</head>

<body>
    <div>
        <form action="getFiles" method="GET">
            <div aria-orientation="vertical">
                <label>Введите название папки</label>
                <input type="text" name="newPath" class="input_text">
                <label class="note">Пустой путь ведет к корневой папке</label>
                <input type="submit" class="button" value="Перейти в папку">
            </div>
        </form>
        <table>
            <caption>Файлы в папке</caption>
            <% folders.forEach(function(item) { %>
                <tr>
                    <td class="folder"></td>
                    <td class="info">
                        <%= item.name %>
                    </td>
                <tr>
                    <% }); %>
                        <% files.forEach(function(item) { %>
                <tr>
                    <td class="file"></td>
                    <td class="info"><a href="/download?path=<%= item.path_display %>">
                            <%= item.name %>
                        </a></td>
                <tr>
                    <% }); %>
        </table>

        <form action="upload" method="POST">
            <div aria-orientation="vertical">
                <label>Введите абсолютный путь файла</label>
                <input type="text" name="filename" class="input_text">
                <label>
                    <%= resultUpload %>
                </label>
                <input type="submit" class="button" value="Загрузка файла">
            </div>
        </form>

        <table>
            <caption>Текущий токен</caption>
            <tr>
                <td class="header">Access token : </label></td>
                <td class="info">
                    <%= access_token %>
                </td>
            </tr>
            <tr>
                <td class="header">Lifetime : </label></td>
                <td class="info">
                    <%= lifetime %>
                </td>
            </tr>
            <tr>
                <td class="header">Type token : </label></td>
                <td class="info">
                    <%= type %>
                </td>
            </tr>
        </table>
        <a class="button" href="/logout">Выход</a>
    </div>
</body>

</html>